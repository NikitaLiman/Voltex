{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "strict": false, // Отключает все строгие проверки типов
    "noImplicitAny": false, // Разрешает implicit any
    "skipLibCheck": true, // Пропускает проверку библиотек
    "noImplicitReturns": false, // Отключает строгие проверки возврата значений
    "noFallthroughCasesInSwitch": false,

    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "@types/*.d.ts"],
  "exclude": ["node_modules"]
}
